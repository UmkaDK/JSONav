source 'https://rubygems.org'
gem 'rake'
gem 'plist'

# NOTE: Exclude this group with: bundle --without development
group :development do
  gem 'pry'             # An IRB alternative and runtime developer console
  gem 'pry-bond'        # Input completion in pry console
  gem 'pry-debundle'    # Removes restrictions on loading gems in console
  gem 'pry-byebug'      # Adds step, next, finish, continue & break
  gem 'pry-highlight'   # Highlight and prettify output in console
  gem 'pry-rails'       # Use Pry as your rails console
end
